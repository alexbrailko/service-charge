generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  //provider = "sqlite"
  //url      = "file:./dev.db"
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
  //shadowDatabaseUrl = "mysql://b43d463aded250:7cd0ac71@eu-cdbr-west-03.cleardb.net/heroku_0aaa9f1d9948ff8?reconnect=true"
}

model Listing {
  id            String      @id @default(uuid())
  url           String
  type          String
  datePosted    DateTime
  title         String
  listingPrice  Int
  beds          Int?
  baths         Int?
  area          Int?   // square feet
  address       String
  addressFull   String
  postCode      String
  coordinates   String?
  serviceCharge Int
  groundRent    Int?
  pictures      String       @db.LongText
}